<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="4dp"
    android:orientation="vertical">

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Word" />

    <Button
        android:id="@+id/btnDelete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete All"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"/>

    <TextView
        android:id="@+id/txtProductId"
        android:text="ID Appear Here"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/editTextProductName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter Product Name"/>

    <Button
        android:id="@+id/btnGetProductByName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show Product Id By Name"
        android:layout_marginBottom="6dp"/>

    <EditText
        android:id="@+id/editTextDeleteById"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter Product ID"/>

    <Button
        android:id="@+id/btnDeleteById"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete By ID"/>

    <EditText
        android:id="@+id/editTextRangeStart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="1000"/>

    <EditText
        android:id="@+id/editTextRangeEnd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3000"/>

    <Button
        android:id="@+id/btnShowProductByRange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Show Product List By Range"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerProductByRange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>